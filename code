using System;
using System.Collections.Generic;
using System.Linq;
using System.Runtime.InteropServices;
using System.Text;
using System.Threading.Tasks;
using System.Web;
using static System.Net.WebRequestMethods;

namespace jun1
{
    internal class Program
    {
        static void Main(string[] args)
        {
            int arrayLenght = 10;
            int arrayHeight = 10;
            int randomMinimalNumber = 0;
            int randomMaximalNumber = 10;
            int replacementNumber = 0;
            int[,] array = new int[arrayHeight, arrayLenght];
            Random random = new Random();
            int maxValue;

            for (int i = 0; i < array.GetLength(0); i++)
            {
                for (int j = 0; j < array.GetLength(1); j++)
                {
                    array[i, j] = random.Next(randomMinimalNumber, randomMaximalNumber);
                    Console.Write(array[i, j] + " ");
                }
                Console.WriteLine();
            }

            IEnumerable<int> colNumbs = array.Cast<int>();
            maxValue = colNumbs.Max();

            Console.WriteLine("\nМаксимальное число: " + maxValue + "\n");

            for (int i = 0; i < array.GetLength(0); i++)
            {
                for (int j = 0; j < array.GetLength(1); j++)
                {
                    if (array[i, j] == maxValue)
                    {
                        array[i, j] = replacementNumber;
                    }
                    Console.Write(array[i, j] + " ");
                }
                Console.WriteLine();
            }
        }
    }
}
