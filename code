using System;
using System.Collections.Generic;
using System.Linq;
using System.Runtime.InteropServices;
using System.Text;
using System.Threading.Tasks;
using System.Web;
using static System.Net.WebRequestMethods;

namespace jun1
{
    internal class Program
    {
        static void Main(string[] args)
        {
            int summandToMaximalNumber = 1;
            int arrayLenght = 10;
            int arrayHeight = 10;
            int randomMinimalNumber = 0;
            int randomMaximalNumber = 10;
            int replacementNumber = 0;
            int[,] matrix = new int[arrayHeight, arrayLenght];
            Random random = new Random();
            int maxValue = 0;

            for (int i = 0; i < matrix.GetLength(0); i++)
            {
                for (int j = 0; j < matrix.GetLength(1); j++)
                {
                    matrix[i, j] = random.Next(randomMinimalNumber, randomMaximalNumber);
                    Console.Write(matrix[i, j] + " ");

                    if (matrix[i, j] + summandToMaximalNumber == randomMaximalNumber)
                    {
                        maxValue = matrix[i, j];
                    }
                }
                Console.WriteLine();
            }

            Console.WriteLine("\nМаксимальное число: " + maxValue + "\n");

            for (int i = 0; i < matrix.GetLength(0); i++)
            {
                for (int j = 0; j < matrix.GetLength(1); j++)
                {
                    if (matrix[i, j] == maxValue)
                    {
                        matrix[i, j] = replacementNumber;
                    }
                    Console.Write(matrix[i, j] + " ");
                }
                Console.WriteLine();
            }
        }
    }
}
